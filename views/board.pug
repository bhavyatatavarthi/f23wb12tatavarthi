extends layout
 
block content
  h1= title
  p rows #{query.rows}
  p columns #{query.cols}
 
  - let rows=Number(query.rows)
  - let cols=Number(query.cols)
 
  if !(Number.isInteger(rows)) && !(Number.isInteger(cols))
    p incorrect rows or columns
  else if (rows<1) && (rows>10)
    p rows are out of range
  else if (cols<1) && (cols>10)
    p cols are out of range
  else
   table#outer
     - for(let a=0; a<rows; a++){
        tr#middle
         - for(let b=0; b<cols; b++){
            if(a==b)
                td 1
            else if ((a == b + 1))
                td 2
            else if (a === b - 1)
                td #{a}
            else
                td 0
         -}
     -}

  